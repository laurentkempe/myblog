---
import BaseLayout from './Layout.astro';
const { frontmatter } = Astro.props;
---
<BaseLayout pageTitle={frontmatter.title}>
    <p>{frontmatter.date.toString().slice(0,10)}</p>
    <p><em>{frontmatter.description}</em></p>
    {frontmatter.image !== undefined && <img src={frontmatter.image.url} width="600" alt={frontmatter.image.alt} />}   
    {frontmatter.coverImage !== undefined && <img src={frontmatter.coverImage} width="600" alt={frontmatter.coverCaption} />}   
    {frontmatter.coverCaption !== undefined && frontmatter.coverCaption}   
    <slot />
    <div class="tags">
        {frontmatter.tags.map((tag: string) => (
            <p class="tag"><a href={`/tags/${tag}`}>{tag}</a></p>
        ))}
    </div>
</BaseLayout>
<style>
    a {
      color: #00539F;
    }
  
    .tags {
      display: flex;
      flex-wrap: wrap;
    }
  
    .tag {
      margin: 0.25em;
      border: dotted 1px #a1a1a1;
      border-radius: .5em;
      padding: .5em 1em;
      font-size: 1.15em;
      background-color: #F8FCFD;
    }
</style>
