---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const allPresentations = await getCollection("presentations");
const sortedPresentations = allPresentations.sort((a, b) => 
  new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);
---
<Layout title="Speaking">
	<ul class="text-gray-600 dark:text-gray-300">
		{sortedPresentations.map((presentation) => 
			<li><a href={`/speaking${presentation.data.permalink}`} class="hover:text-blue-600 dark:hover:text-blue-400">{presentation.data.title}</a></li>
		)}
	</ul>
</Layout>