---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import PublicationList from '../components/PublicationList.astro';
import { getLatestEntries } from '../utils/collections';

const allPresentations = await getCollection("presentations");
const sortedPresentations = allPresentations.sort((a, b) => 
  new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);
---

<Layout title="Speaking">
  <div class="max-w-4xl mx-auto px-4">
    <PublicationList 
      title=""
      icon=""
      href="/speaking"
      items={sortedPresentations}
      linkPrefix="/speaking"
    />
  </div>
</Layout>