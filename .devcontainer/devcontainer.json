{
    "name": "Laurent's Blog - Astro Development",
    "image": "mcr.microsoft.com/devcontainers/javascript-node:20-bullseye",
    "features": {
        "ghcr.io/devcontainers/features/git:1": {},
        "ghcr.io/devcontainers/features/github-cli:1": {}
    },
    "hostRequirements": {
        "cpus": 2,
        "memory": "4gb",
        "storage": "32gb"
    },
    "onCreateCommand": "curl -fsSL https://bun.sh/install | bash",
    "postCreateCommand": "bash -c 'export PATH=\"$HOME/.bun/bin:$PATH\" && bun install'",
    "postStartCommand": "bash -c 'export PATH=\"$HOME/.bun/bin:$PATH\" && echo \"ðŸš€ Dev Container is ready! Run: bun run dev\"'",
    "forwardPorts": [4321],
    "portsAttributes": {
        "4321": {
            "label": "Astro Dev Server",
            "onAutoForward": "notify"
        }
    },
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.defaultProfile.linux": "bash",
                "editor.formatOnSave": true,
                "editor.codeActionsOnSave": {
                    "source.fixAll": "explicit"
                },
                "typescript.preferences.quoteStyle": "double",
                "astro.typescript.allowArbitraryAttributes": true
            },
            "extensions": [
                "astro-build.astro-vscode",
                "bradlc.vscode-tailwindcss",
                "ms-vscode.vscode-typescript-next",
                "GitHub.copilot",
                "GitHub.copilot-chat",
                "esbenp.prettier-vscode",
                "ms-vscode.vscode-json",
                "unifiedjs.vscode-mdx"
            ]
        },
        "jetbrains": {
            "settings": {
                "javascript.nodejs.interpreter.path": "/usr/local/bin/node",
                "nodejs.packageManagerPath": "$HOME/.bun/bin/bun"
            },
            "plugins": []
        }
    },
    "remoteEnv": {
        "NODE_ENV": "development",
        "PATH": "${containerEnv:HOME}/.bun/bin:${containerEnv:PATH}"
    },
    "remoteUser": "node"
}